<?xml version="1.0"?>
<config>
    <modules>
        <OTFL_GoogleTagManager>
            <version>1.0.0</version>
        </OTFL_GoogleTagManager>
    </modules>
    <global>
        <blocks>
            <googletagmanager>
                <class>OTFL_GoogleTagManager_Block</class>
            </googletagmanager>
        </blocks>
        <helpers>
            <googletagmanager>
                <class>OTFL_GoogleTagManager_Helper</class>
            </googletagmanager>
        </helpers>
        <models>
            <googletagmanager>
                <class>OTFL_GoogleTagManager_Model</class>
            </googletagmanager>
        </models>
    </global>
    <frontend>
        <translate>
            <modules>
                <OTFL_GoogleTagManager>
                    <files>
                        <default>OTFL_GoogleTagManager.csv</default>
                    </files>
                </OTFL_GoogleTagManager>
            </modules>
        </translate>
        <events>
            <checkout_onepage_controller_success_action>
                <observers>
                    <googletagmanager_order_success>
                        <class>googletagmanager/observer</class>
                        <method>setGoogleTagManagerTransactionData</method>
                    </googletagmanager_order_success>
                </observers>
            </checkout_onepage_controller_success_action>
            <checkout_multishipping_controller_success_action>
                <observers>
                    <googletagmanager_order_success>
                        <class>googletagmanager/observer</class>
                        <method>setGoogleTagManagerTransactionData</method>
                    </googletagmanager_order_success>
                </observers>
            </checkout_multishipping_controller_success_action>
        </events>
        <layout>
            <updates>
                <googletagmanager>
                    <file>googletagmanager.xml</file>
                </googletagmanager>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <OTFL_GoogleTagManager>
                    <files>
                        <default>OTFL_GoogleTagManager.csv</default>
                    </files>
                </OTFL_GoogleTagManager>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <googletagmanager>
            <googletagmanager>
                <active>0</active>
                <price_type>1</price_type>
                <datalayertransactions>0</datalayertransactions>
                <datalayervisitors>0</datalayervisitors>
            </googletagmanager>
        </googletagmanager>
    </default>
</config>