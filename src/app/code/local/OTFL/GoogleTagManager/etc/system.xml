<config>
    <tabs>
        <otfl translate="label" module="googletagmanager">
            <label>OTFL</label>
            <sort_order>0</sort_order>
        </otfl>
    </tabs>
    <sections>
        <googletagmanager>
            <label>Google Tag Manager</label>
            <tab>otfl</tab>
            <frontend_type>text</frontend_type>
